<h2>Log in</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>

  <div class="form-group">
    <label class="col-sm-2" autocomplete="email" for="email">Email:</label>
    <div class="col-sm-4">
      <%= f.email_field(:email,  placeholder: "Email", :class => "form-control", autofocus: true, autocomplete: "email") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2" autocomplete="email" for="password">Password:</label>
    <div class="col-sm-4">
      <%= f.password_field(:password,  placeholder: "Password",  :class => "form-control", autocomplete: "off") %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>

    <div class="form-group">
      <label class="col-sm-2" for="visible">Remember Me:</label>
      <div class="col-sm-10">
        <!--<%= f.text_field(:remember_me, :class => "form-control") %>-->
        <%= f.check_box(:remember_me, :class => "form-check-input") %>
      </div>
    </div>

  <% end -%>

  <br>
  <%= submit_tag "Log in", :class => "btn btn-default" %>

<% end %>
<br><br>
<%= render "devise/shared/links" %>
