
<h2>Sign Up</h2>
<br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <label class="col-sm-2" autocomplete="email" for="email">Email:</label>
    <div class="col-sm-4">
      <%= f.email_field(:email,  placeholder: "Email", :class => "form-control", autofocus: true, autocomplete: "email") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2" autocomplete="email" for="password">Password:
    </label>

    <!-- <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %> -->

    <div class="col-sm-4">
      <%= f.password_field(:password,  placeholder: "Password",  :class => "form-control", autocomplete: "off") %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2" autocomplete="email" for="password">Password Confirmation:</label>
    <div class="col-sm-4">
      <%= f.password_field(:password_confirmation,  placeholder: "Password Confirmation",  :class => "form-control", autocomplete: "off") %>
    </div>
  </div>



  <br>
  <%= submit_tag "Sign up", :class => "btn btn-default" %>

<% end %>
<br><br>
